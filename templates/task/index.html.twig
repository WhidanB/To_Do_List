{% extends 'base.html.twig' %} {% block title %}Task index{% endblock %} {%
block body %}
<h1>To Do List</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Date</th>
      <th>Ajouté par</th>
    </tr>
  </thead>
  <tbody>
    {% for task in tasks %}
    <tr>
      <td>{{ task.name }}</td>
      <td>{{ task.description }}</td>
      <td>{{ task.dueDate ? task.dueDate|date('Y-m-d') : '' }}</td>
      <td>{{ task.addedBy }}</td>
      <td>
        <a href="{{ path('app_task_show', { id: task.id }) }}">show</a>
        <a href="{{ path('app_task_edit', { id: task.id }) }}">edit</a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="5">Pas de tâche en cours</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a href="{{ path('app_task_new') }}">Create new</a>

<a href="/logout">Déconnexion</a>
{% endblock %}

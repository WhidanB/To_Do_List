{% extends 'base.html.twig' %} {% block title %}View Task {% endblock %} {%
block body %}
<nav class="d-flex justify-content-around align-items-center">
  <H1>Show Task</H1>
  <a class="deco h-100" href="/logout">
    <button type="button" class="btn btn-danger">logout</button>
  </a>
</nav>
<section class="vh-100" style="background-color: #eee">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-10">
        <div class="card">
          <div
            class="card-header p-3 d-flex justify-content-between align-items-center"
          >
            <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Task List</h5>
            <a href="{{ path('app_task_index') }}">
              <button class="btn btn-primary">back to list</button>
            </a>
          </div>
          <div
            class="card-body"
            data-mdb-perfect-scrollbar="true"
            style="position: relative; height: 400px"
          >
            <table class="table mb-0">
              <tbody>
                <tr>
                  <th>Id</th>
                  <td>{{ task.id }}</td>
                </tr>
                <tr>
                  <th>Name</th>
                  <td>{{ task.name }}</td>
                </tr>
                <tr>
                  <th>Description</th>
                  <td>{{ task.description }}</td>
                </tr>
                <tr>
                  <th>Due_date</th>
                  <td>{{ task.dueDate ? task.dueDate|date('Y-m-d') : '' }}</td>
                </tr>
              </tbody>
            </table>
            <a href="{{ path('app_task_edit', { id: task.id }) }}">
              <button type="button" class="btn btn-warning">edit</button>
            </a>

            {{ include("task/_delete_form.html.twig") }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
